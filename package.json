{
  "name": "@aex.is/zero",
  "version": "0.1.8",
  "description": "Aexis Zero scaffolding CLI",
  "license": "UNLICENSED",
  "type": "module",
  "bin": {
    "zero": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
